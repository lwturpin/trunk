<!DOCTYPE html>
<html>
  <head>
    <title>Virtual Closet: Users</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <a href="/"><h1>Virtual Closet</h1></a>
    <% if (items.length > 0) { %>
    <ul>
      <% items.forEach(function(item) { %>
      <li><a href="/users/<%=item._id%>"><%=item.name%></a></li>
      <% }); %>
    </ul>
    <% } else { %>
    <div>No users have been added.</div>
    <% } %>
    <div class="control">
      <h2>Add or update a new user</h2>
      <form method="put" action="/users/">
        <label>User ID<br>
          (lowercase letters only, no spaces):
          <input name="item[id]" type="text" pattern="[a-z]+" required
                 placeholder="lwturpin">
        </label>
        <label>User name: 
          <input name="item[name]" type="text" required
                 placeholder="Lauren Turpin">
        </label>
        <label>User description:
          <textarea name="item[description]" cols="80" rows="10" 
                    placeholder="This is my virtual closet to manage my many articles of clothing, shoes and accessories."
          ></textarea>
        </label>
        <button>Add or update</button>
      </form>
    </div>
  </body>
</html>

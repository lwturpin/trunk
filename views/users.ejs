<!DOCTYPE html>
<html>
<head>
    <title>Trunk: Users</title>
    <link rel="stylesheet" href="/style.css"
</head>

<body>
    <a href="/"><h1>All Users</h1></a>
    <% if (items.length > 0) { %>
    <ul>
        <% items.forEach(function(item) { %>
        <li><a href="/users/<%=item._id%>"><%=item.name%></a></li>
        <% }); %>
    </ul>
    <% } else { %>
    <div>No Users found.</div>
    <% } %>
    <div class="control">
        <h2>Search for users by name</h2>
        <form method="get" action="/users">
            <label>User Name: <input name="name"></label>
            <button>Search</button>
        </form>
    </div>
<ul class="all">
